<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/outer"
        android:orientation="horizontal">
        <com.android.securityapplication.RoundedImageView
            android:layout_width="50dp"
            android:id="@+id/image"
            android:visibility="gone"

            android:layout_height="50dp"
            />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inner"
        android:layout_gravity="right"
        android:layout_margin="5dip"
        android:paddingLeft="10dp"
        android:paddingRight="20dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/chat_box_pink"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:id="@+id/singleMessageImage"/>

        <TextView
            android:id="@+id/singleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:paddingLeft="20dp"

            android:textColor="@android:color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:paddingLeft="20dp"
            android:layout_below="@id/singleMessage"
            android:layout_gravity="right"
            android:gravity="right"
            android:text="22.99 PM"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:id="@+id/time" />

    </RelativeLayout>

   </RelativeLayout>
</LinearLayout>